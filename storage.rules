rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /profilePictures/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /receipts/{fileName} {
      allow read, write: if true;  // For testing, allow all access
    }

    match /products/{fileName} {
      // For testing, allow all operations for authenticated users
      allow read, write, delete: if request.auth != null;
    }

    match /product_pictures/{userId}/{fileName} {
      // Allow read access to anyone (since these are product images)
      allow read: if true;
      
      // Allow write/delete only for the owner
      allow write, delete: if request.auth != null 
                          && request.auth.uid == userId;
    }
  }
}
